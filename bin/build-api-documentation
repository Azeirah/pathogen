#!/usr/bin/env php
<?php

use Sami\Sami;

require __DIR__ . '/../vendor/autoload.php';

$sami = new Sami(
    __DIR__ . '/../src',
    array(
        'build_dir' => __DIR__ . '/../artifacts/documentation/api',
        'cache_dir' => sprintf('%s/sami-cache', sys_get_temp_dir())
    )
);
$sami['project']->update();
